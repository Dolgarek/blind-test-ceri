<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body style="overflow: hidden;">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <nav class="navbar navbar-expand-lg px-3 bg-light d-flex justify-content-between">
                <div>
                    <a class="navbar-brand" href="#">Blind-Test</a>
                </div>
                <div>
                    <button type="button" class="btn btn-outline-primary" ><a class="link" href="{{ path('app_logout') }}">Logout</a></button>
                </div>
            </nav>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
